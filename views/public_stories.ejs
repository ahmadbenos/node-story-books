<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="/stories">Public Stories</a>
    <a href="/dashboard">My Stories</a>
    <a href="/users/logout">Logout</a>
</div>

<!-- Use any element to open the sidenav -->
<div class="container-fluid bg-dark">
    <div class="d-flex justify-content-between">
        <div class="my-3"><button onclick="openNav()" style="transform: scale(1.5);"><i
                    class="fas fa-bars"></i></button></div>

        <div class="text-center">
            <h1 style="color: white;">Public Stories</h1>
        </div>
        <div class="bg-dark"> &nbsp; &nbsp; &nbsp;</div>
    </div>
</div>


<!-- Add all page content inside this div if you want the side nav to push page content to the right (not used if you only want the sidenav to sit on top of the page -->
<div id="main" style="background-image: linear-gradient(to left,#667eea, #764ba2);">
    <div class="container">

        <div class="row myGrid">
            <% stories.forEach(function(story){ %>

            <div class="col-md-4 my-2">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= story.title  %></h5>
                        <p class="card-text cardtext">
                            <%= story.body.replace(/<(?:.|\n)*?>/gm, '').substr(0, 145) + '...' %> </p>

                        <div class="text-center">
                            <a href="#">
                                <div class="chip">
                                    <img src="<%- story.user.image %>" alt="Person" width="96" height="96">
                                    <%= story.user.displayName %>
                                </div>
                            </a>
                        </div>
                        <hr>
                        <div class="text-center">
                            <button class="btn btn-dark my-1">Read More</button>
                            <% if(story.user._id == myUser) { %>
                            <button class="btn btn-danger">Edit Post</button>
                            <% } %>
                        </div>

